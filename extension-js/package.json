{
  "name": "automatic-code-documentation",
  "displayName": "Automatic Code Documentation",
  "description": "Automatically generate code documentation with CodeBERT and LLMs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "automatic-code-documentation.helloWorld",
        "title": "Test function"
      }, 
      {
        "command": "automatic-code-documentation.currentDirTest",
        "title": "Test current directory"
      },
      {
        "command": "automatic-code-documentation.allDirsTest",
        "title": "Test current and sub directories"
      },
      {
        "command": "automatic-code-documentation.curFileTest",
        "title": "Test this file"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "automatic-code-documentation.helloWorld",
          "group": "9_cutcopypaste"
        }
      ], 
      "explorer/context": [
        {
          "command": "automatic-code-documentation.allDirsTest",
          "group": "6_copypath",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "automatic-code-documentation.currentDirTest",
          "group": "6_copypath",
          "when": "explorerResourceIsFolder"
        }, 
        {
          "command": "automatic-code-documentation.curFileTest",
          "group": "6_copypath",
          "when": "resourceLangId == python"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "axios": "^1.4.0"
  }
}
